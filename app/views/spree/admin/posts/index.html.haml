%h1= t("listing_posts")


%table.index#listing_posts
  %thead
    %th Name
    %th Text
    %th
    %th
  %tbody
    - @posts.each do |post|
      %tr
        %td= link_to post.title, object_url(post)
        %td= post.description.html_safe
        %td= link_to_edit post &nbsp;
        %td= link_to_delete post &nbsp;

%p{:data => {:hook => 'links'}}
  = link_to icon('add') + ' ' + t(:new_post), new_object_url, :id => 'new_post_link'
