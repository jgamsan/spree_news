- content_for :page_title do
  = t(:new_post)

- content_for :page_actions do
  %li
    = button_link_to t(:back_to_posts_list), spree.admin_posts_path, :icon => 'icon-arrow-left'

= csrf_meta_tags
%div{:data => {:hook => "admin_order_new_header"}}
  = render :partial => 'spree/shared/error_messages', :locals => { :target => @innertube }


%h1= t("new_post")

= form_for [:admin, @post] do |f|
  = render :partial => 'form', :locals => {:f => f}
  .filter-actions.actions{:data => {:hook => "buttons"}}
    = button t(:create), 'icon-ok'
